<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

<body>

    <%- include('../partials/header.ejs') %>

    <main class="main-form">

        <section class="sectionLogin">

            <h1 class="titular-login">Crear</h1>

            <form class="formlogin" action="/products/create" method="POST" enctype="multipart/form-data">

                <label for="imagen">Imagen</label>
                <input class="input-producto" type="file" name="imagen" id="imagen" accept=".png, .jpg" required>

                <label for="titulo">Titulo:</label>
                <input class="input-producto" type="text" name="titulo" id="titulo" required>

                <label for="descripcion">Descripcion:</label>
                <textarea class="input-producto" name="descripcion" id="descripcion" cols="30" rows="5"
                    placeholder="Agregar descripcion del producto..." required></textarea>

                <label for="precio">Precio:</label>
                <input class="input-producto" type="number" name="precio" id="precio" required>

                <label for="oferta" class="form-label">Producto en oferta:</label>
                <select name="oferta" id="oferta" class="form-input" required>
                    <option value="">Elegí</option>
                    <option value="No">No</option>
                    <option value="En-oferta">En oferta</option>
                </select>

                <label for="categoria" class="form-label">Categoría:</label>
                <select name="categoria" id="categoria" class="form-input" required>
                    <option value="baterias">Baterias</option>
                    <option value="guitarras">Guitarras</option>
                    <option value="bajos">Bajos</option>
                    <option value="equipos-de-sonido-consola">Equipos de sonido/Consolas</option>

                </select>

                <Button type="submit" class="button">Crear producto</Button>



            </form>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %>

</body>

</html>