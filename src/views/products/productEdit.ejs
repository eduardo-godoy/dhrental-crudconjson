<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs') %> 

<body>

    <%- include('../partials/header.ejs') %> 

    <main class="main-form">

        <section class="sectionLogin">

            <h1 class="titular-login">Editar</h1>

            <form class="formlogin" action="/products/productEdit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">

                <label for="imagen">Imagen</label>
                <input class="input-producto" type="file" name="imagen" id="imagen" placeholder="<%= product.imagen %>" value="<%= product.imagen %>" required>

                <label for="titulo">Titulo:</label>
                <input class="input-producto" type="text" name="titulo" id="titulo" placeholder="<%= product.nombre %>" value="<%= product.nombre %>" required>

                <label for="descripcion">Descripcion:</label> 
                <textarea class="input-producto"  name="descripcion" id="descripcion" cols="30" rows="5" placeholder="<%= product.descripcion %>" value="<%= product.descripcion %>" required ><%= product.descripcion %></textarea>

                <label for="precio">Precio:</label>
                <input class="input-producto" type="number" name="precio" id="precio" placeholder="<%= product.precio %>" value="<%= product.precio %>" required>

                <label for="oferta" class="form-label">Producto en oferta:</label>
                <select name="oferta" id="oferta" class="form-input" required>
                    <option value="<%= product.oferta %>"></option>
                    <option value="<%= product.oferta %>">No</option>
                    <option value="<%= product.oferta %>">En oferta</option>
                </select>

                <label for="categoria" class="form-label">Categor√≠a:</label>
                <select name="categoria" id="categoria" class="form-input" required>
                    <option value="<%= product.categoria %>"></option>
                    <option value="<%= product.categoria %>">Baterias</option>
                    <option value="<%= product.categoria %>">Guitarras</option>
                    <option value="<%= product.categoria %>">Bajos</option>
                    <option value="<%= product.categoria %>">Equipos de sonido/Consolas</option>

                </select>

                <Button type="submit" class="button">Editar producto</Button>

            </form>

        </section>

    </main>

    <%- include('../partials/footer.ejs') %> 

</body>

</html>